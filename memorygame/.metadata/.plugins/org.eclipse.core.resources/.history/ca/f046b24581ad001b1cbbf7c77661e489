package model;

public class Card {

	
	private int number;
	private boolean hidden;
	private int discoveredBy;
	
	
	
	public Card(int number){
		this.number = number;
		this.hidden = true;
		this.discoveredBy = -1;
	}
	
	
	public int getNumber() {
		return number;
	}
	
	public boolean isHidden() {
		return hidden;
	}
	
	public int discoveredBy() {
		return discoveredBy;
	}
	
	public void setDiscoveredBy(int playerID) {
		discoveredBy = playerID;
	}
}
