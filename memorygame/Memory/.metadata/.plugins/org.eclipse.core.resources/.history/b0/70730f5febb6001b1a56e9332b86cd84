package model;

import java.util.LinkedList;

import javax.swing.text.AbstractDocument.Content;

public class BoardList implements Board {

	private int size;
	private LinkedList<Content> list; // Wieso ist hier Content als falsch markiert, im Video aber nicht?!
	
	//Dimensionen des Spielbrettes:
	// 

	public BoardList() {
		size = 3;// gilt hier auch drei, oder muss sie ggf. anagepasst werden, an die breite des
					// eigentlich gewünschten Spielbrettes?
		
		list = new LinkedList<Content>(); //Was geht hier nicht? Es ist genau wie im Video...
		for(int i=0; i < size * size; i++) {
			list.add(Content.EMPTY); // Was hab ich hier vergessen, sodass EMPTY richtig wahrgenommen wird?
		}
	}
	
	/**
	 * Method to convert chosen Card to position within array
	 * @param i chosen Card
	 * @return What array Number is called upon?
	 */
	
	private Position convertFromListToPostion(int i) {
		return new Position(i/size, i % size);
	}
	
	/**
	 * Method to convert position in Array to chosen Card
	 * @param p Position within array
	 * @return 
	 */
	
	private int convertFromPositionToList(Position p) {
		return p.getRow() * size + p.getColumn();
	}

	@Override
	public boolean inBounds(Position p) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public Card getCardAtPosition(Position p) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public boolean finish() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public int pairsFoundBy(int playerID) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public boolean validPosition(Position position1, Position position2) {
		// TODO Auto-generated method stub
		return false;
	}

}
